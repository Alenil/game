<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "dunaonline.cz" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="body_wrapper">
      <div class="planet"></div>
      <div id="body_container">
        <div id="body_container_b">
          <% if current_user -%>
            <%= render 'layouts/hlavicka' -%>
          <% else %>
            <%= render 'layouts/hlavicka_login' -%>
          <% end -%>

          <div id="page_content">
            <% flash.each do |name, msg| %>
              <%= content_tag :div, msg, :id => "flash_#{name}" %>
            <% end %>

            <table>
              <tr>
                <td class="left">
                  <% if current_user -%>
                    <% if current_user.admin? %>
                      <%= render 'layouts/administration' %>
                    <% else %>
                      
                    <% end %>
                    <%= render 'layouts/leve_pole' %>
                  <% else %>
                  <% end %>
                </td>

                <td class="stred">
                  <%= yield %>
                </td>

                <% if current_user -%>
                  <%= render 'layouts/prave_pole' %>
                <% end %>

              </tr>

            </table>
          </div>

          <%= render 'layouts/paticka' %>
        </div>
      </div>
    </div>
  </body>
</html>
