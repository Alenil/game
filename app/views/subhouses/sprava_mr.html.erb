<%# encoding: utf-8 %>
<table class="tab0">
  <tr>
    <td>
      <a href="index.htm" title="Home">⌂</a>
      » <%= link_to 'Malorod', subhouse_path(current_user.subhouse), :title => "Malorod" %>
