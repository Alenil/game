<tr>

  <th class="descr" style="background-image: url(<%= asset_path cesta_budovy(current_user.house.name, technology.image_url) %>);,width:180px;"><%= technology.name %></th>
  <% vylep = technology.vylepseno(current_user) %>


  <%= form_tag vylepsi_technology_path(:technology => technology.id, :user_id => current_user), :class => 'vylepsiTech' do %>
      <% if vylep != technology.max_lvl %>
    <td class="v2" title="Vylepsi"><%= submit_tag (number_with_precision technology.cena_technology(current_user) , :precision => 0).to_s + " exp" %></td>
      <% else %>
          <td class="v2" title="Vylepsi"><%= submit_tag "MAX", :disabled => true %></td>
<% end %>
      <% end %>



  <% technology.max_lvl.times do |lvl| %>


      <% if vylep > lvl %>
          <% if technology.levely.include?(lvl) %>
              <td class="v1" style=background-image:(<%= technology.cesta_technologie("v")%>)>
                <%= lvl+1 %>
              </td>


          <% else %>
              <td class="v1">
                <%= lvl+1 %>
              </td>

          <% end %>


      <% else %>
          <% if technology.levely.include?(lvl) %>
              <td style=background-image:(<%= technology.cesta_technologie("n")%>)>
                <%= lvl+1 %></td>
          <% else %>
              <td>
                <%= lvl+1 %>
              </td>

          <% end %>
      <% end %>


  <% end %></tr>
<tr class="tech_description">
  <td colspan="19"><p><%= technology.description %></p></td>

</tr>
   
            