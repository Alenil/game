<a href="#" id="newOffer">Pridat ponuku</a>
<div id="offerForm">


  <table class="vyroba">
    <tr>
      <th>Nová nabídka</th>
      <th>Cena za kus [Sol]</th>

      <th>Množství k prodeji</th>
      <th>Akce</th>
    </tr>
    <%= form_for(@market) do |f| %>


        <tr>
          <td>

            <%= f.select :area, options_for_select(@user.for_sale), :name => "Vyberte komoditu k prodeji", :title => "Vyberte komoditu k prodeji", :class => "vyber" %>

          </td>
          <td><%= f.number_field :price, :required => true, :min => 1, :size => 3, :title => "Zadejte cenu" %></td>

          <td><%= f.number_field :amount, :required => true, :min => 0.1, :size => 3, :title => "Zadejte množství", :step => "any" %></td>
          <td><%= f.submit 'Prodávat', :class => "ok" %></td>
        </tr>
    <% end %>
  </table>


</div>


